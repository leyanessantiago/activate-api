// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["selectRelationCount", "orderbyRelation"]
}

model User {
  id				          String	@id		@default(uuid())
  userName		        String?	@unique @db.VarChar(255)
  email			          String	@unique
  name			          String?	@db.VarChar(255)
  lastName			      String?	@db.VarChar(255)
  password		        String?
  publisher		        Publisher?
  consumer		        Consumer?
  verificationLevel   Int @default(0)
  verificationCode    Int?
  avatar              String?
  theme               String?
  useDarkStyle        Boolean?
  comments            Comment[]
  interests           UserInterests[]
  createdActivities   Activity[] @relation("CreatedActivities")
  receivedActivities  Activity[] @relation("ReceivedActivities")
}

model Publisher {
  userId      String     @id
  user        User       @relation(fields: [userId], references: [id])
  events      Event[]    @relation(name: "EventAuthor")
  followers   Follower[]
}

model Follower {
  consumerId    String
  consumer      Consumer @relation(fields: [consumerId], references: [userId])
  publisherId   String
  publisher     Publisher @relation(fields: [publisherId], references: [userId])
  status        Int
  updatedBy     String
  createdOn     DateTime @default(now())
  updatedOn     DateTime @default(now())
  @@id([consumerId, publisherId])
}

model Consumer {
  userId            String          @id
  following         Follower[]
  user              User            @relation(fields: [userId], references: [id])
  relatives         Relationship[]  @relation("Relatives")
  relatedTo         Relationship[]  @relation("RelatedTo")
  eventsFollowing    EventFollower[]
}

model Relationship {
  userA         Consumer @relation("Relatives", fields: [userAId], references: [userId])
  userAId       String
  userB         Consumer @relation("RelatedTo", fields: [userBId], references: [userId])
  userBId       String
  status        Int
  updatedBy     String
  createdOn     DateTime @default(now())
  updatedOn     DateTime @default(now())
  @@id([userAId, userBId])
}

model Category {
  id              String          @id @default(uuid())
  name            String          @unique @db.VarChar(255)
  icon            String
  parentId        String?
  parent          Category?       @relation("SubCategories", fields: [parentId], references: [id])
  subcategories   Category[]      @relation("SubCategories")
  events          Event[]
  userInterests   UserInterests[]
}

model Event {
  id            String     @id @default(uuid())
  name          String     @db.VarChar(255)
  date          DateTime
  address       String
  description   String?
  image         String?
  category      Category   @relation(fields: [categoryId], references: [id])
  categoryId    String
  author        Publisher  @relation(name: "EventAuthor", fields: [authorId], references: [userId])
  authorId      String
  comments      Comment[]
  activities    Activity[]
  followers     EventFollower[]
}

model Comment {
  id            String   @id @default(uuid())
  content       String
  response      String?
  author        User     @relation(fields: [authorId], references: [id])
  authorId      String
  event         Event    @relation(fields: [eventId], references: [id])
  eventId       String
  createdOn     DateTime @default(now())
  respondedOn   DateTime?
  activity      Activity[]
}

model Activity {
  id          String    @id @default(uuid())
  type        Int
  creator     User      @relation("CreatedActivities", fields: [creatorId], references: [id])
  creatorId   String
  receiver    User      @relation("ReceivedActivities", fields: [receiverId], references: [id])
  receiverId  String
  event       Event?    @relation(fields: [eventId], references: [id])
  eventId     String?
  comment     Comment?   @relation(fields: [commentId], references: [id])
  commentId   String?
  seen        Boolean?  @default(false)
  sentOn      DateTime  @default(now())
}

model UserInterests {
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String
  relevance  Int      @default(0)

  @@id([userId, categoryId])
}

model EventFollower {
  consumer       Consumer     @relation(fields: [consumerId], references: [userId])
  consumerId     String
  event          Event @relation(fields: [eventId], references: [id])
  eventId         String

  @@id([consumerId, eventId])
}
